{
    "compilerOptions": {
        "module": "ES6",
        "moduleResolution": "node",
        "target": "ES6",
        "removeComments": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "noUnusedLocals": true,
        "outDir": "obj",
        "declaration": true,
        "declarationDir": "typings"
    },
    "include": [
        "./src/**/*"
    ]
}